<%- include('partials/header') -%>
<body class="container bg">
    <div>
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="container clear m2 card">
            <div class="row">
              <h2 class="column"><%= posts[i].title %></h2>
            </div>
            <div class="column">
              <a href="/post/<%= posts[i]._id%>">
                <img class=" card-img-top" src="<%= posts[i].image%>">
              </a>
              <div class="card-body">
                <p><strong><%= posts[i].userName %></strong></p>
                <div class="row">
                  <span class="col-sm"><%= posts[i].city %>, <%= posts[i].state %> <%= posts[i].country %></span>
                </div>
                <div class="row">
                  <p class="column mt-1"><%= posts[i].description %></p>
                </div>
              </div>
            </div>
          </div>
        <% } %>
    </div>
</body>  
<%- include('partials/navBar') -%>
<%- include('partials/footer') -%>